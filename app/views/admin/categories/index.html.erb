
<h1>All Categories</h1>


<ul>
  <% @categories.each do |category| %>
    <li><%= category.name %>
        <%= link_to "View this Category", admin_category_path(category) %>
        -
        <%= link_to "Edit this Category", edit_admin_category_path(category) %>
        -
        <%= link_to "Delete this Category", admin_category_path(category), method: :delete %>
    </li><br>

  <% end %>
</ul>

